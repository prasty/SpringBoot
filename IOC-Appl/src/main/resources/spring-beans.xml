<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean id="debit" class="com.dependencyInjection.DebitCard"/>
    
   <bean id="credit" class="com.dependencyInjection.CreditCard"/>
    
     <bean id="rs" class="com.dependencyInjection.RestaurantService">
		 <property name="payment" ref="debit"/> <!--to perform setter injection this synatax is compulsory-->
		 
		 <constructor-arg name="payment" ref="credit"/><!--to perform constructor injection this synatax is compulsory-->
		 
	 </bean>


</beans>